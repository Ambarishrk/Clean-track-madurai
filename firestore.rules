rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow staff to read profiles to verify roles
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Operational collections read access for all staff
    match /kpi_snapshots/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
    }

    match /alerts/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /tasks/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /gfc_indicators/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /notifications/{id} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow write: if isSignedIn();
    }

    match /wards/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /zones/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /summaries/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /predictive_alerts/{id} {
      allow read: if isSignedIn();
    }

    match /reports/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /posts/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
    }
    
    match /citizen_reports/{id} {
      allow create: if true;
      allow read: if isSignedIn();
      allow update: if isSignedIn();
    }
  }
}