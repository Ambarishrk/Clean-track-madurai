rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * CLEAN-TRACK SECURITY RULES
     * 
     * Optimized for municipal staff collaboration. 
     * Allows all authenticated staff to read operational metrics (KPIs, Alerts, Tasks, etc.).
     * Restricts administrative and destructive actions to the Commissioner.
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    // Safely check role without crashing if user doc is missing
    function hasRole(role) {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', '') == role;
    }

    function isCommissioner() {
      return hasRole('MUNICIPAL_COMMISSIONER');
    }

    // --- COLLECTION RULES ---

    // User profiles - Readable by directory, editable by owner or Commissioner
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (request.auth.uid == userId || isCommissioner());
      allow delete: if isCommissioner();
    }

    // Notifications - Scoped to the individual user
    match /notifications/{notifId} {
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
    }

    // Operational Data (KPIs, Alerts, Tasks, GFC, Metadata)
    // Allow READ for all authenticated staff to support the "Unified Command Center"
    
    match /wards/{wardId} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }

    match /zones/{zoneId} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }

    match /kpi_snapshots/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isCommissioner();
    }

    match /alerts/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); 
      allow update: if isSignedIn(); // Allow resolving/assigning
      allow delete: if isCommissioner();
    }

    match /tasks/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); 
      allow update: if isSignedIn();
      allow delete: if isCommissioner();
    }

    match /gfc_indicators/{id} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }

    // Legacy/Support Collections
    match /escalations/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /predictive_alerts/{id} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }
    
    match /reports/{id} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }

    match /collection_trips/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /toilet_facilities/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /posts/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
    }
  }
}