rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * CLEAN-TRACK SECURITY RULES
     * 
     * Simplified for prototyping to allow list operations for signed-in users,
     * while maintaining role-based write access and scoped ownership.
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Safely check user role from the users collection
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isCommissioner() {
      return isSignedIn() && getUserRole() == 'MUNICIPAL_COMMISSIONER';
    }

    // --- COLLECTION RULES ---

    // User profiles
    match /users/{userId} {
      allow get, create: if isOwner(userId) || isSignedIn(); // Allow reading profiles for UI display
      allow list: if isSignedIn(); 
      allow update: if isOwner(userId) || isCommissioner();
      allow delete: if isCommissioner();
    }

    // Notifications (Top-level collection as used in the code)
    match /notifications/{notifId} {
      allow get, list: if isSignedIn() && (resource.data.userId == request.auth.uid || isCommissioner());
      allow create: if isSignedIn(); // System or other users can notify
      allow update: if isSignedIn() && (resource.data.userId == request.auth.uid);
      allow delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isCommissioner());
    }

    // Administrative Boundaries
    match /wards/{wardId} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }

    match /zones/{zoneId} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }

    // Operational Data (KPIs, Alerts, Tasks, GFC)
    // For prototyping, we allow 'read' for all authenticated staff.
    // Writes are restricted by role.
    
    match /kpi_snapshots/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); // Supervisors and Commissioner
      allow update, delete: if isCommissioner();
    }

    match /alerts/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); 
      allow update: if isSignedIn(); // Allow resolving
      allow delete: if isCommissioner();
    }

    match /tasks/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); 
      allow update: if isSignedIn();
      allow delete: if isCommissioner();
    }

    match /gfc_indicators/{id} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }

    match /escalations/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isCommissioner();
    }

    match /predictive_alerts/{id} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }
    
    match /reports/{id} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }
    
    match /posts/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || isCommissioner());
    }
  }
}