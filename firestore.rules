rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if the user is logged in
    function isSignedIn() {
      return request.auth != null;
    }

    // This match rule applies to every document in every collection
    match /{document=**} {
      // Allows read, write, create, update, and delete for any logged-in user
      allow read, write: if isSignedIn();
    }
    
    // Specifically keeping the citizen_reports exception if you still want 
    // unauthenticated users to be able to submit reports.
    match /citizen_reports/{id} {
      allow create: if true;
    }
  }
}
