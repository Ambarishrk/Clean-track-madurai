rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * CLEAN-TRACK SECURITY RULES
     * 
     * Broad read access for all authenticated staff to support the Unified Command Center.
     * Strict write access limited by role and ownership.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isCommissioner() {
      return isSignedIn() && getUserRole() == 'MUNICIPAL_COMMISSIONER';
    }

    // Allow authenticated users to read any document in the operational collections
    // This resolves the "permission-denied" errors on dashboard queries
    match /{path=**} {
      allow read: if isSignedIn();
    }

    // --- WRITE RULES ---

    match /users/{userId} {
      allow create: if isSignedIn();
      // Allow user to update their own profile, OR allow Commissioner to manage/delete users
      allow update, delete: if isSignedIn() && (request.auth.uid == userId || isCommissioner());
    }

    match /notifications/{notifId} {
      allow write: if isSignedIn();
    }

    match /kpi_snapshots/{id} {
      allow create, update: if isSignedIn();
      allow delete: if isCommissioner();
    }

    match /alerts/{id} {
      allow create, update: if isSignedIn();
      allow delete: if isCommissioner();
    }

    match /tasks/{id} {
      allow create, update, delete: if isSignedIn();
    }

    match /gfc_indicators/{id} {
      allow write: if isSignedIn();
    }
    
    match /posts/{id} {
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || isCommissioner());
    }

    match /wards/{id} {
      allow write: if isCommissioner();
    }

    match /zones/{id} {
      allow write: if isCommissioner();
    }
    
    match /reports/{id} {
      allow write: if isCommissioner();
    }

    match /escalations/{id} {
      allow create, update: if isSignedIn();
      allow delete: if isCommissioner();
    }
  }
}