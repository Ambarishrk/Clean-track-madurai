rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * CLEAN-TRACK SECURITY RULES
     * 
     * Optimized for municipal staff collaboration. 
     * Allows all authenticated staff to read operational metrics (KPIs, Alerts, Tasks, etc.).
     * Restricts administrative and destructive actions to the Commissioner.
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    // Check if the user is a Commissioner by looking at their profile
    // Note: get() calls in rules are fine for get/write, but broad queries 
    // are better handled by checking auth state and allowing signed-in reads.
    function isCommissioner() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'MUNICIPAL_COMMISSIONER';
    }

    // --- COLLECTION RULES ---

    // User profiles - Any signed-in staff can see directories, but only owners/admin can edit
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (request.auth.uid == userId || isCommissioner());
      allow delete: if isCommissioner();
    }

    // Notifications - Scoped to the individual user
    match /notifications/{notifId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Administrative Boundaries & Metadata - Readable by all staff
    match /wards/{wardId} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }

    match /zones/{zoneId} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }

    // Operational Data (KPIs, Alerts, Tasks, GFC)
    // We allow READ for all authenticated staff to support the "Unified Command Center"
    
    match /kpi_snapshots/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isCommissioner();
    }

    match /alerts/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); 
      allow update: if isSignedIn(); // Allow resolving/assigning
      allow delete: if isCommissioner();
    }

    match /tasks/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); 
      allow update: if isSignedIn();
      allow delete: if isCommissioner();
    }

    match /gfc_indicators/{id} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }

    // Legacy/Support Collections
    match /escalations/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /predictive_alerts/{id} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }
    
    match /reports/{id} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }

    match /collection_trips/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /toilet_facilities/{id} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
  }
}