rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * SMART CITY SANITATION INTELLIGENCE PLATFORM (SIP) - SECURITY RULES
     * 
     * Optimised for high-concurrency municipal operations and public participation.
     * Enforces strict RBAC and granular data validation.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }

    // --- PUBLIC & CITIZEN ACCESS ---
    
    // Allow anyone to read city-wide health scores and public summaries
    match /summaries/{summaryId} {
      allow read: if true; 
      allow write: if hasRole('MUNICIPAL_COMMISSIONER');
    }

    // Citizen Reports: Anyone can create, but only staff can list/manage
    match /citizen_reports/{reportId} {
      allow create: if true; 
      allow read, list: if isSignedIn();
      allow update, delete: if hasRole('MUNICIPAL_COMMISSIONER') || hasRole('ZONAL_OFFICER');
    }

    // --- MUNICIPAL OPERATIONS ---

    match /users/{userId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn();
      allow update, delete: if isSignedIn() && (request.auth.uid == userId || hasRole('MUNICIPAL_COMMISSIONER'));
    }

    match /kpi_snapshots/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if hasRole('MUNICIPAL_COMMISSIONER');
    }

    match /alerts/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); 
      allow update: if isSignedIn(); 
      allow delete: if hasRole('MUNICIPAL_COMMISSIONER');
    }

    match /tasks/{id} {
      allow read: if isSignedIn();
      allow create: if hasRole('MUNICIPAL_COMMISSIONER') || hasRole('ZONAL_OFFICER');
      allow update: if isSignedIn();
      allow delete: if hasRole('MUNICIPAL_COMMISSIONER');
    }

    match /wards/{id} {
      allow read: if true; 
      allow write: if hasRole('MUNICIPAL_COMMISSIONER');
    }

    match /zones/{id} {
      allow read: if true;
      allow write: if hasRole('MUNICIPAL_COMMISSIONER');
    }

    // AI Predictive Analytics Log
    match /predictive_insights/{id} {
      allow read: if isSignedIn();
      allow write: if false; // System generated only via Service/Function
    }
  }
}