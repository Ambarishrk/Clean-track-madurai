rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * CLEAN-TRACK SECURITY RULES
     * 
     * Optimized for municipal staff collaboration. 
     * Allows all authenticated staff to read operational metrics (KPIs, Alerts, Tasks, GFC).
     * Restricts destructive actions and administrative changes to the Commissioner.
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Safely check user role - returns null if doc doesn't exist
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isCommissioner() {
      let data = getUserData();
      return isSignedIn() && data != null && data.role == 'MUNICIPAL_COMMISSIONER';
    }

    // --- COLLECTION RULES ---

    // User profiles
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isCommissioner();
      allow delete: if isCommissioner();
    }

    // Notifications
    match /notifications/{notifId} {
      // Users can see their own notifications. Commissioner can see system-wide logs.
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isCommissioner());
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.userId == request.auth.uid);
      allow delete: if isSignedIn() && (resource.data.userId == request.auth.uid || isCommissioner());
    }

    // Administrative Boundaries (Static metadata)
    match /wards/{wardId} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }

    match /zones/{zoneId} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }

    // Operational Data
    // We allow 'read' (get/list) for all authenticated staff to support the unified command center.
    
    match /kpi_snapshots/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isCommissioner();
    }

    match /alerts/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); 
      allow update: if isSignedIn(); // Allow resolving alerts
      allow delete: if isCommissioner();
    }

    match /tasks/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); 
      allow update: if isSignedIn();
      allow delete: if isCommissioner();
    }

    match /gfc_indicators/{id} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }

    match /escalations/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isCommissioner();
    }

    match /predictive_alerts/{id} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }
    
    match /reports/{id} {
      allow read: if isSignedIn();
      allow write: if isCommissioner();
    }
    
    match /posts/{id} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.authorId == request.auth.uid || isCommissioner());
      allow delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || isCommissioner());
    }
  }
}