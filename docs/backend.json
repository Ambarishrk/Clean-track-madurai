
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a municipal officer or supervisor.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "role": { "type": "string", "enum": ["MUNICIPAL_COMMISSIONER", "ZONAL_OFFICER", "WARD_SUPERVISOR"] },
        "zoneId": { "type": "string" },
        "wardId": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" },
        "lastLoginAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "email", "role", "createdAt"]
    },
    "KpiSnapshot": {
      "title": "KpiSnapshot",
      "type": "object",
      "description": "Daily sanitation metrics for a ward.",
      "properties": {
        "wardId": { "type": "string" },
        "zoneId": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "segregationRate": { "type": "number" },
        "d2dCoverageRate": { "type": "number" },
        "toiletHygieneScore": { "type": "number" },
        "wasteProcessingRate": { "type": "number" },
        "status": { "type": "string", "enum": ["green", "amber", "red"] },
        "recordedBy": { "type": "string" },
        "createdAt": { "type": "number" }
      },
      "required": ["wardId", "zoneId", "date", "status", "createdAt"]
    },
    "Task": {
      "title": "Task",
      "type": "object",
      "description": "Corrective action task.",
      "properties": {
        "wardId": { "type": "string" },
        "zoneId": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "status": { "type": "string", "enum": ["open", "in_progress", "completed"] },
        "priority": { "type": "string", "enum": ["high", "medium", "low"] },
        "assignedTo": { "type": "string" },
        "dueDate": { "type": "number" },
        "createdAt": { "type": "number" }
      },
      "required": ["title", "status", "priority", "wardId", "zoneId"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "User profiles and roles."
        }
      },
      {
        "path": "/kpi_snapshots/{id}",
        "definition": {
          "entityName": "KpiSnapshot",
          "schema": { "$ref": "#/backend/entities/KpiSnapshot" },
          "description": "Daily ward KPI records."
        }
      },
      {
        "path": "/tasks/{id}",
        "definition": {
          "entityName": "Task",
          "schema": { "$ref": "#/backend/entities/Task" },
          "description": "Corrective action tasks."
        }
      },
      {
        "path": "/alerts/{id}",
        "definition": {
          "entityName": "Alert",
          "description": "System alerts."
        }
      },
      {
        "path": "/gfc_indicators/{id}",
        "definition": {
          "entityName": "GfcIndicator",
          "description": "MoHUA GFC certification indicators."
        }
      }
    ]
  }
}
